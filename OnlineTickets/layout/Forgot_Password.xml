<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff90caf9">
    <TextView
        android:text="Forgot Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/text_title_forgot_passsword"
        android:textSize="80px"
        android:textAlignment="center"
        android:textColor="#000"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_marginTop="10px"
        android:background="#ff212121"/>
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_txt_email_for_pass"
        android:hint="Email adress"
        android:textSize="80px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:layout_marginTop="250px"
        android:background="#ffe0f7fa"/>
    <Button
        android:text="Resset Password"
        android:layout_width="302.1dp"
        android:layout_height="54.5dp"
        android:id="@+id/btn_resset_password"
        android:layout_marginLeft="160px"
        android:layout_marginTop="80px"/>
    <TextView
        android:text="Don't have an account?"
        android:layout_width="wrap_content"
        android:layout_height="30.5dp"
        android:id="@+id/txt_dont_have_acc"
        android:layout_marginLeft="350px"
        android:layout_marginTop="250px"/>
    <Button
        android:text="Register Here"
        android:layout_width="128.0dp"
        android:layout_height="43.4dp"
        android:id="@+id/btn_register_here"
        android:layout_marginLeft="380px"/>
    <Button
        android:text="Back"
        android:layout_width="204.2dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_back"
        android:layout_marginTop="150px"
        android:layout_marginLeft="270px"/>

</LinearLayout>
