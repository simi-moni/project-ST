<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff90caf9">
    <TextView
        android:text="Change Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/text_title_change_password"
        android:textSize="80px"
        android:textAlignment="center"
        android:textColor="#000"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_marginTop="10px"
        android:background="#ff212121"/>
    <TextView
        android:text="Enter Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_enter_email" 
        android:textAlignment="center"
        android:layout_marginTop="100px"
        android:textSize="65px"/>
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_enter_email"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:textSize="70px"
        android:background="#ffe0f7fa"/>
    <TextView
        android:text="Enter Old Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_enter_old_password"
        android:textAlignment="center"
        android:textSize="65px"/>
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_enter_old_password"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:textSize="70px"
        android:background="#ffe0f7fa"/>
    
    <TextView
        android:text="Enter New Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_enter_new_password" 
        android:textAlignment="center"
        android:textSize="65px"/>
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_enter_new_password"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:textSize="70px"
        android:background="#ffe0f7fa"/>
    <TextView
        android:text="Verify New Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_verify_new_password"
        android:textAlignment="center"
        android:textSize="65px"/>
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_enter_verify_new_password" 
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:textSize="70px"
        android:background="#ffe0f7fa"/>
    <Button
        android:text="Save Changes"
        android:layout_width="219.4dp"
        android:layout_height="60.2dp"
        android:layout_marginLeft="260px"
        android:layout_marginTop="100px"
        android:id="@+id/btn_save_changes"
        />
    <Button
        android:text="Back"
        android:layout_width="160.5dp"
        android:layout_height="47.0dp"
        android:layout_marginLeft="350px"
        android:layout_marginTop="150px"
        android:id="@+id/btn_back"
        />
</LinearLayout>
