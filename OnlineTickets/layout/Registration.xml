<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff90caf9">
    <TextView
        android:text="Registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/text_title_registration"
        android:textSize="80px"
        android:textAlignment="center"
        android:textColor="#000"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_marginTop="10px"
        android:background="#ff212121"/>
    <EditText
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_txt_username"
        android:hint="Username"
        android:layout_marginTop="60px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:background="#ffe0f7fa"
        android:textSize="75px"
        />
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_txt_passord"
        android:hint="Password"
        android:layout_marginTop="60px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:background="#ffe0f7fa"
        android:textSize="75px"/>
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_txt_confirm_password"
        android:hint="Confirm Password"
        android:layout_marginTop="60px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:background="#ffe0f7fa"
        android:textSize="75px"/>
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_txt_email"
        android:hint="Email"
        android:layout_marginTop="60px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:background="#ffe0f7fa"
        android:textSize="75px"/>
    <Button
        android:text="Sign Up"
        android:layout_width="265.1dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_signup"
        android:layout_marginTop="50px"
        android:textSize="70px"
        android:layout_marginLeft="195px"/>
    <Button
        android:text="Back"
        android:layout_width="171.0dp"
        android:layout_height="wrap_content"
        android:id="@id/btn_back"
        android:layout_marginTop="80px"
        android:layout_marginLeft="310px"/>

</LinearLayout>
