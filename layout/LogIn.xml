<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50px"
    android:background="#ff90caf9">
    <EditText
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/edit_txt_email"
        android:hint="Email"
        android:layout_margin="50px"
        android:textSize="70px"
        android:background="#ffe0f7fa"/>
    <EditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_txt_password"
        android:hint="Password"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:textSize="70px"
        android:background="#ffe0f7fa"
        android:layout_marginTop="25px"/>
    <Button
        android:text="Forgot Password"
        android:layout_width="174.1dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_forgot_password"
        android:layout_marginLeft="450px"
        android:layout_marginTop="50px"/>
    <Button
        android:text="Log In"
        android:layout_width="231.6dp"
        android:layout_height="58.7dp"
        android:id="@+id/btn_login"
        android:layout_marginTop="80px"
        android:textSize="75px"
        android:layout_marginLeft="177px"/>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1"
        android:layout_margin="100px">
        <TextView
            android:text="Don't have an account?"
            android:layout_width="wrap_content"
            android:layout_height="30.5dp"
            android:id="@+id/txt_dont_have_acc" />
        <Button
            android:text="Register Here"
            android:layout_width="wrap_content"
            android:layout_height="34.7dp"
            android:id="@+id/btn_register_here"
            android:layout_marginLeft="100px"/>
    </LinearLayout>


</LinearLayout>
