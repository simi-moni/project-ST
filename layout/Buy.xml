<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff90caf9">
    <TextView
        android:text="Buy Ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/text_title_buy"
        android:textSize="80px"
        android:textAlignment="center"
        android:textColor="#000"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_marginTop="10px"
        android:background="#ff212121"/>
    <TextView
        android:text="Choose type of transport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_choose_transport"
        android:textSize="50px"
        android:textAlignment="center"
        android:layout_marginTop="100px"/>
    <Spinner
        android:layout_width="160.5dp"
        android:layout_height="47.0dp"
        android:layout_marginLeft="350px"
        android:layout_marginTop="50px"
        android:id="@+id/spinner_type_transport"
        android:entries="@array/transport_arrays"
        android:background="#ffcfd8dc" 
        />
    <TextView
        android:text="Choose a line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_choose_line"
        android:textSize="50px"
        android:textAlignment="center"
        android:layout_marginTop="100px"/>
    <Spinner
        android:layout_width="160.5dp"
        android:layout_height="47.0dp"
        android:layout_marginLeft="350px"
        android:layout_marginTop="50px"
        android:id="@+id/spinner_type_line"
        android:entries="@array/line_arrays"
        android:background="#ffcfd8dc" 
        />
    <Button
        android:text="Back"
        android:layout_width="160.5dp"
        android:layout_height="47.0dp"
        android:layout_marginLeft="350px"
        android:layout_marginTop="250px"
        android:id="@+id/btn_back"
        />

</LinearLayout>
