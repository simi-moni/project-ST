<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff90caf9">
    <TextView
        android:text="Account Setings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/text_title_acc_settings"
        android:textSize="80px"
        android:textAlignment="center"
        android:textColor="#000"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:layout_marginTop="10px"
        android:background="#ff212121"/>
    <Button
        android:text="Add Credit / Debit Card"
        android:layout_width="208.4dp"
        android:layout_height="64.4dp"
        android:layout_marginLeft="280px"
        android:layout_marginTop="250px"
        android:id="@+id/btn_add_card"
        />
    <Button
        android:text="Change Password"
        android:layout_width="208.4dp"
        android:layout_height="64.4dp"
        android:layout_marginLeft="280px"
        android:layout_marginTop="100px"
        android:id="@+id/btn_change_password"
        />
    <Button
        android:text="Back"
        android:layout_width="160.5dp"
        android:layout_height="47.0dp"
        android:layout_marginLeft="350px"
        android:layout_marginTop="250px"
        android:id="@+id/btn_back"
        />
</LinearLayout>
